<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBECEC"
    tools:context=".register_page">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="15dp"
      android:layout_margin="15dp"
      android:background="@color/white"
      >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/galdeano"
        android:text="Already have an account?"
        android:textColor="#808080"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/galdeano"
        android:text="Login instead"
        android:textColor="#50c789"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/logintext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/galdeano"
        android:text="Enter your details to register in the App"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/Fname"
        android:layout_width="213dp"
        android:layout_height="44dp"
        android:layout_below="@+id/logintext"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/galdeano"
        android:hint="Full Name :"
        android:inputType="textPersonName"
        android:padding="6dp"
        android:textSize="20dp" />



    <EditText
        android:id="@+id/emailid"
        android:layout_below="@+id/Fname"
        android:layout_marginTop="10dp"
        android:layout_width="213dp"
        android:layout_height="44dp"
        android:fontFamily="@font/galdeano"
        android:hint="Patient Email :"
        android:textSize="20dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/dob"
        android:layout_below="@+id/emailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dob (dd/mm/yy):"
        android:fontFamily="@font/galdeano"
        android:inputType="date"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
      />

    <RadioGroup
        android:id="@+id/radiobtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/dob"
        android:layout_marginTop="10dp"
      >
      <RadioButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/radiofemale"
          android:text="Female"
          android:textColor="@color/black"
          android:fontFamily="@font/galdeano"
          android:textSize="16dp">


      </RadioButton>
      <RadioButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Male"
          android:layout_marginLeft="30dp"
          android:textSize="16dp"
          android:fontFamily="@font/galdeano"
          android:textColor="@color/black"
          android:id="@+id/radiomale">

      </RadioButton>

    </RadioGroup>

    <EditText
        android:id="@+id/mobilenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radiobtn"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/galdeano"
        android:hint="Mobile Number:(without +91)"
        android:inputType="phone"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/pass"
        android:layout_below="@+id/mobilenum"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/galdeano"
        android:hint="Password :"
        android:textSize="20dp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/confirmpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/galdeano"
        android:hint="Confirm password:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/adhar"
        android:layout_below="@+id/confirmpass"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/galdeano"
        android:hint="Enter Your Adhar card details: "
        android:textSize="20dp"
        android:inputType="number" />


    <Button
        android:id="@+id/registerbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adhar"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="70dp"
        android:text="Register"

        />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/probar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="10dp"
        android:visibility="gone"
        />


  </RelativeLayout>


</ScrollView>